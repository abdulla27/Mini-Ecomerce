<%- include("./common/head")%>
    <style>
        .image{
            max-width: 100%;
        }
        .image img {
            width: 400px;
            height: 400px;
            border-width: 2px;
            border-color: #555;
            border-style: solid;
            margin-top: 10px;
            margin-right: 250px;
            margin-left: 450px;
            max-width: 100%;

            
        }
        .pname{
            text-align: center;
            font-size: 40px;
            font-weight: bold;
            text-decoration: underline;
        }
        .pdetail{
            text-align: center;
            font-size: 20px;
            font-weight: lighter;
            text-transform: capitalize;

        }
        h5{
            font-style:italic;
            text-transform: capitalize;
            text-decoration: underline;
            font-weight: 800;
            text-align: center;
            padding-top: 10px;
            padding-bottom: 10px;
        }
        .pdetail p{
            font-weight: bold;
            text-decoration: underline;
        }
        .pinfo{
            text-transform: capitalize;
            
            text-align: center;
            padding-bottom: 80px;
        }
    </style>
    <body>
        <header>
            <%- include("./common/header")%>
        </header>
        <div class="pname">
            <%= data.productname %>
        </div>

        <div class="image">
            <img src="<%= data.product_image %>" alt="img-fluid">
        </div>
        <h5>See details below:</h5>
        <div class="pdetail"><p>Price: <strong>$<%= data.price%></strong></p></div>
        <div class="pdetail">Color: <%= data.color%></div>
        <div class="pdetail">Quantity: <%= data.quantity%></div>
        <div class="pdetail">Brand: <%= data.brandname%></div>
        <div class="pinfo">Information: <%= data.productdetail%><br><br>
            <label class="form-label">Quantity:</label>
            <input type="text" name="quntityinput" placeholder="Add quantity" id="addquantity"><br>
            <a href="/maincart"><button class="btn btn-primary" onclick="myfun" >ADD to Cart</button></a>
            <script>

            </script>
        </div>
        <footer>
            <%- include("./common/footer")%>
        </footer>
    </body>
    </html>