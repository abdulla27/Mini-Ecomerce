<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">


<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <center><h3 class="mb-4 pb-2 pb-md-0 mb-md-5"> ADD PRODUCT</h3></center>
                        <form method="post" action="/add_product" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input type="text" id="productname" class="form-control form-control-lg"
                                            name="productname" placeholder="Enter product name" />
                                        <label class="form-label" for="firstName">productname</label>
                                    </div>

                                </div>
                            </div>
                            <div>
                                <label class="form-label" for="firstName">add product image</label>&nbsp; &nbsp; &nbsp; &nbsp;
                                <input type="file" name="product_image">
                                
                                <!-- <button class="button button-primary">add the product with photo</button> -->
                            </div>
                            <br><br>

                            <div class="row">
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        <input type="text" class="form-control form-control-lg" name="price"
                                            placeholder="Enter price" id="price" />
                                        <label for="password" class="form-label">price</label>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <input type="text" id="color" class="form-control form-control-lg" name="color"
                                            placeholder="Enter product color" />
                                        <label class="form-label" for="firstName">color</label>
                                    </div>

                                </div>
                            </div>


                            <div class="mt-4 pt-2">

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="text" id="username" class="form-control form-control-lg"
                                                name="quantity" placeholder="Enter product quantity" />
                                            <label class="form-label" for="firstName">quantity</label>
                                        </div>

                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-4">

                                        <div class="form-outline">
                                            <input type="text" id="createdby" class="form-control form-control-lg"
                                                name="product_created_by" placeholder="Enter creater name" />
                                            <label class="form-label" for="firstName">creater</label>
                                        </div>

                                    </div>
                                </div>


                                <div class="mt-4 pt-2">


                                    <div class="mt-4 pt-2">

                                        <div class="row">
                                            <div class="col-md-6 mb-4">

                                                <div class="form-outline">
                                                    <input type="text" id="username"
                                                        class="form-control form-control-lg" name="brandname"
                                                        placeholder="Enter brand name" />
                                                    <label class="form-label" for="firstName">brand name</label>
                                                </div>

                                            </div>
                                        </div>


                                        <div class="form-outline">
                                            <label for="exampleFormControlTextarea1">Enter product detail</label>
                                            <textarea class="form-control" name="productdetail" id="exampleFormControlTextarea1"
                                                rows="10" placeholder="Enter product detail"></textarea>
                                        </div>


                                        <div class="mt-4 pt-2">
                                            <center><input class="btn btn-primary btn-lg" type="submit"
                                                    value="Submit" /></center>
                                        </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>